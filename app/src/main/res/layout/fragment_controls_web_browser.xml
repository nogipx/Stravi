<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <FrameLayout
        android:id="@+id/webControl_activeTabs_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/webControl_inputUrl"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/webControl_inputUrl"
        android:background="@color/white"
        android:layout_marginBottom="8dp">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/webControl_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/browser_controls_buttons"
            app:labelVisibilityMode="unlabeled"/>

        <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@id/webControl_actions"/>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/webControl_inputUrl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:hint="Search or type web address"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:inputType="textUri"
        android:maxLines="3"
        android:layout_marginBottom="8dp"
        tools:layout_editor_absoluteX="12dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
