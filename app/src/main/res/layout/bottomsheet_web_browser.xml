<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/browser_bottom_sheet"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/bottom_sheet_behavior"
    android:elevation="4dp"
    app:behavior_peekHeight="@dimen/peek_height">

    <FrameLayout
        android:id="@+id/browser_peek"
        android:layout_width="match_parent"
        android:layout_height="@dimen/peek_height"
        app:layout_constraintBottom_toTopOf="@id/browser_sheet_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/browser_peek_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_round_top"
            android:layout_gravity="bottom">

            <ImageView
                android:id="@+id/browser_peek_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/peek_head_height"
                app:srcCompat="@drawable/ic_expand_more_black_24dp"/>
        </RelativeLayout>
    </FrameLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@id/browser_sheet_layout"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/browser_sheet_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:maxHeight="@dimen/max_height_bottom_sheet_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:id="@+id/browser_sheet_fragment_container"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/browser_sheet_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/browser_sheet_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:elevation="2dp"
            android:background="@color/white"
            app:labelVisibilityMode="unlabeled"

            app:menu="@menu/browser_navigation_sheet"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>