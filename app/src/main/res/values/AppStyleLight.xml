<resources>

    <style name="Stravi.Light" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="colorControlHighlight">@color/colorSecondaryLight</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="colorControlHighlight">@color/colorSecondaryLight</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Fullscreen">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Dialog" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorSecondary</item>
        <item name="colorControlHighlight">@color/colorSecondaryLight</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

</resources>
